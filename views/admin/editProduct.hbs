<section id="page-wrapper">
  <div class="container">
    <form action="/admin/editProduct?id={{products._id}}" method="POST" enctype="multipart/form-data">
      <div class="form-row">
        <div class="form-group col-md-12">
          <label for="inputName">Product Name</label>
          <input type="text" class="form-control" id="inputName" name="Name" value="{{products.Name}}" required>
        </div>

      </div>
      <div class="form-group">
        <label for="inputDescription">Description</label>
        <input type="text" class="form-control" id="inputDescription" name="Description" value="{{products.Description}}"
          required>
      </div>
      <div class="form-group">
        <label for="inputPrice">Price</label>
        <input type="number" class="form-control" id="inputPrice" name="Price" value="{{products.Price}}" required>
      </div>
      <div class="form-group">
        <label for="inputStock">Stock</label>
        <input type="number" class="form-control" id="inputStock" name="Stock" value="{{products.Stock}}" required>
      </div>
      <div class="form-group mt-2">
        <label for="exampleFormControlFile1">Select 1st Image</label>
        <img src="/product-images/{{products._id}}a.jpg" style="width:100px;height:100px" ><br><br>
        <input type="file" class="form-control" name="Image1" id="exampleFormControlFile1" >
      </div>
      <div class="form-group mt-2">
        <label for="exampleFormControlFile2">Select 2nd Image</label>
        <img src="/product-images/{{products._id}}b.jpg" style="width:100px;height:100px" ><br><br>
        <input type="file" class="form-control" name="Image2" id="exampleFormControlFile2" >
      </div>
      <div class="form-group mt-2">
        <label for="exampleFormControlFile3">Select 3rd Image</label>
        <img src="/product-images/{{products._id}}c.jpg" style="width:100px;height:100px" ><br><br>
        <input type="file" class="form-control" name="Image3" id="exampleFormControlFile3" >
      </div>
      

      <button type="submit" class="btn btn-primary mt-3">Edit Product</button>
    </form>
  </div>
</section>