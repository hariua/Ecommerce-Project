<div id="page-wrapper">
  <ol class="breadcrumb">
			<li class="pr-3"><a href="/admin" style="text-decoration: none;">Home</a></li>
			<li class="pr-3"><a href="" style="text-decoration: none;">Users</a></li>
			<li class="active">All Users</li>
		</ol>
<div class="container ">
    <div class="row">
        <div class="col-md-6">
            <a href="/admin/addUser" class="btn btn-primary ">Add New User</a>
        </div>
    </div>
    <table class="table table-striped mt-5" style="margin-top:30px;" id="userTable">
  <thead>
    <tr>
        <th scope="col">No.</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Mobile Number</th>
      <th scope="col">Status</th>
      
    </tr>
  </thead>
  <tbody>
      {{#each users}}
    <tr>
      <td>{{inc @index}}</td>
      <td>{{this.Name}}</td>
      <td>{{this.Email}}</td>
      <td>{{this.Mobile}}</td>
      <td>
        {{#if this.Status}}
        <p class="text-center">Blocked</p>
        {{else}}
        <p class="text-center">Unblocked</p>
      
      {{/if}}
      </td>
      <td>
        {{#if this.Status}}
        <a class="btn btn-primary" id="unblock-btn" href="/admin/unblock-user/{{this._id}}">Unblock</a>
        {{else}}
        <a class="btn btn-danger" id="block-btn" href="/admin/block-user/{{this._id}}">Block</a>
      
      {{/if}}
      </td>
      <td><a href ="/admin/editUser?id={{this._id}}" class="btn btn-primary" >Edit</a> </td> 
      <td><a href ="/admin/deleteUser?id={{this._id}}" class="btn btn-danger" onclick="return confirm('Do you want to Delete {{this.Name}}')">Delete</a> </td> 
      
      
    </tr>
    {{/each}}
   
  </tbody>
</table>
</div>
</div>

