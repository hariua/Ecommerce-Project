<section id="page-wrapper">
  <div class="container">
    <form action="/admin/addProduct" method="POST" enctype="multipart/form-data"  style="padding-top: 40px;">
      <div class="form-row">
       
      <div class="form-row">
          <div class="form-group col-md-4">
            <label for="inputName">Product Name</label>
            <input type="text" class="form-control" id="inputName" name="Name"  required>
          </div>


          <div class="form-group col-md-6">
            <label for="inputDescription">Description</label>
            <input type="text" class="form-control" id="inputDescription" name="Description"
               required>
          </div>
        </div>
        <div class="form-row">
          <div class="form-group col-md-5">
            <label for="inputPrice">Price</label>
            <input type="number" class="form-control" id="inputPrice" name="Price"  required>
          </div>
          <div class="form-group col-md-5">
            <label for="inputStock">Stock</label>
            <input type="number" class="form-control" id="inputStock" name="Stock"  required>
          </div>
        </div>
        <div class="form-row">
          <div class="form-group mt-2 col-md-4">
            <label for="exampleFormControlFile1">Select 1st Image</label>
            
            <input type="file" class="form-control" name="Image1" id="exampleFormControlFile1" style="width: 250px;" required
              >
          </div>
          <div class="form-group mt-2 col-md-4">
            <label for="exampleFormControlFile2">Select 2nd Image</label>
            
            <input type="file" class="form-control" name="Image2" id="exampleFormControlFile2" style="width: 250px;" required
             >
          </div>
          <div class="form-group mt-2 col-md-4">
            <label for="exampleFormControlFile3">Select 3rd Image</label>
            
            <input type="file" class="form-control" name="Image3" id="exampleFormControlFile3" style="width: 250px;" required
             >
          </div>
        </div>

      <div class="row">
        <div class="col-md-12 text-center">
          <button type="submit" class="btn btn-primary mt-3">Add Product</button>
        </div>
      </div>
    </form>
  </div>
</section>